    "lodash": "3.10.x",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "rollup": "^3.29.4",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps-world": "^1.0.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.1",
    "typedoc-plugin-missing-exports": "^2.1.0",
