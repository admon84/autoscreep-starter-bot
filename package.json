  "description": "Screeps Autonomous Framework",
  "main": "src/main.ts",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix",
    "build": "rollup -c",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-season": "rollup -c --environment DEST:season",
    "push-sim": "rollup -c --environment DEST:sim",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-season": "rollup -cw --environment DEST:season",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/admon84/screeps-autonomous-framework.git"
  },
  "author": "admon84",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/admon84/screeps-autonomous-framework/issues"
  },
  "homepage": "https://github.com/admon84/screeps-autonomous-framework#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/lodash": "3.10.x",
    "@types/node": "^20.8.0",
    "@types/screeps": "^3.3.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@typescript-eslint/typescript-estree": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
